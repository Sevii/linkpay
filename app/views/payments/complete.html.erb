    <h4>Payment completed via Seviipay</h4>
    <hr class="my-4">
  </div>

<div class="row">
  <div class="col">
    <div class="p-2 rounded-3">
      <% if @inovice.user.logo.attached? %>
        <%= image_tag @inovice.user.logo, alt: "â€¦", width: "100", height: "100" %>
       <% end %>
      <h4><b><%=@inovice.seller_name %></b></h4>
      
    </div>
  </div>
</div>
<hr class="my-4"/>
